# Firebase Configuration (required)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
# IMPORTANT: Use the appspot.com bucket for Firebase Web SDK
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Firebase App Check (reCAPTCHA v3)
# Generate a site key in Firebase Console → App Check → reCAPTCHA v3
VITE_RECAPTCHA_V3_SITE_KEY=
# Enable debug token in local dev (optional)
VITE_APPCHECK_DEBUG=false
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# AI Service (Google Nano Banana)
VITE_HAIR_SIM_BASE_URL=https://api.example.com
VITE_HAIR_SIM_API_KEY=your_hair_sim_api_key
VITE_HAIR_SIM_MODEL=hair-sim-v1

# Gemini API (AI image generation)
VITE_GEMINI_API_KEY=your_gemini_api_key

# Email Service
VITE_EMAIL_PROVIDER=sendgrid
VITE_SENDGRID_API_KEY=your_sendgrid_key
VITE_MAILGUN_API_KEY=your_mailgun_key
VITE_MAILGUN_DOMAIN=your_mailgun_domain

# SMS Service
VITE_SMS_PROVIDER=twilio
VITE_TWILIO_ACCOUNT_SID=your_twilio_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_token
VITE_TWILIO_PHONE_NUMBER=your_twilio_phone
